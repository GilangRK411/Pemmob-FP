<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Bottom Wave -->
    <ImageView
        android:id="@+id/bottomWave"
        android:layout_width="match_parent"
        android:layout_height="1100dp"
        android:layout_gravity="bottom"
        android:src="@drawable/vector" />

    <!-- Content Layout (form, buttons, etc.) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1200dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:text="LOGIN"
            android:textColor="#3B322C"
            android:textSize="36sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etUsernameOrEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"    android:layout_marginHorizontal="24dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_edittext"
            android:drawableLeft="@drawable/ic_username"
            android:drawablePadding="16dp"
            android:elevation="4dp"
            android:hint="Username/email"
            android:padding="16dp"
            android:textColor="#000000" />


        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="16dp"
            android:elevation="4dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="#000000" />

        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#3B322C"
            android:elevation="6dp"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Forgot Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Forgot your password?"
            android:textColor="#3B322C"
            android:textSize="14sp" />

        <!-- Sign Up Link -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textColor="#3B322C" />

            <Button
                android:id="@+id/btnGoToRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Sign up"
                android:textColor="#3B322C"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Social Media Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnFacebook"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:backgroundTint="#4267B2"
                android:drawableLeft="@drawable/ic_facebook"
                android:drawablePadding="16dp"
                android:elevation="6dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Facebook"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnTwitter"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:backgroundTint="#1DA1F2"
                android:drawableLeft="@drawable/ic_twitter"
                android:drawablePadding="16dp"
                android:elevation="12dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Twitter"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
